// Import base theme
import "@stdlib/themes/base"

// Extend base theme with type-safe values
theme custom extends base {
  // Button component styles
  button {
    primary {
      bg: color(indigo.500)
      text: color(white)
      hover {
        bg: color(indigo.600)
      }
      focus {
        ring: color(indigo.500)
      }
    }
  }

  // Card component styles
  card {
    bg: color(gray.50)
    border: color(gray.100)
    shadow: size(lg)
    hover {
      shadow: size(xl)
    }
  }
}
